{% extends 'base.html.twig' %}

{% block title %}Nos services{% endblock %}

{% block body %}
<h1 class= "text-center">Nos Services</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb p-3 bg-body-tertiary rounded-3">
            <li class="breadcrumb-item"><a href="{{ path('app_accueil') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nos services</li>
        </ol>
    </nav>
<div>
        {% if services is empty %}
            <p>Pas de données à afficher</p>
        {% else %}
    <div class="container">
        <div class="row">
            {% for service in services %}
            <div class="container text-center nosServices">
                <div class=" row service">
                    <div class="">
                        <img  alt ='' class="col m-3 imgService" src="{{'service.pathImage'}}" style='max-widht 400px, max-height: 400px'>
                    </div>
                    <div class=" col text-wrap firstService">
                        <h2>{{service.title}}</h2>
                        <p>{{service.description}} ?></p>
                    </div>
                </div>
            </div>
                </div>
                </div>
            {% endfor %}
        </div>
    </div>
        {% endif %}
</div>
{% endblock %}

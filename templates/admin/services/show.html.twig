{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
  <div>
    <h2 class= "text-center">Nos Services</h2>
    {% if services is empty %}
      <span class="text-center">Page en cours</span>
    {% else %}
      <div class="container">
        <div class="row">
          {% for service in services %}
            <div class="col-md-6 mb-3">
              <div class="card ">
                <img src="{{ asset( service.pathimage) }}" style="max-width: 400px; max-height: 400px;" class="card-img-top m-auto" alt="...">
                <div class="card-body ">
                  <small class="text-muted ">Référence: {{ service.id }}</small>
                  <h2 class="card-title "> {{ service.title }}</h2>
                  <p class="card-text"><br> {{ service.description }}</p>
                  <div class="card-footer mt-auto">
                    <div class="form-check form-switch d-flex align-items-center ">
                      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault{{ service.id }}" {% if service.isPublished %}checked{% endif %} disabled />
                      <label class="form-check-label ms-2" for="flexSwitchCheckDefault{{ service.id }}">Publier</label>
                    </div>
                    <a href="{{ path('app_admin_services_edit', {'id': service.id}) }}" class="btn btn-warning">Modifier</a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
    <div class="d-flex align-items-center">
    <a href="{{ path('app_admin_services_new') }}" class="btn btn-warning m-auto">Nouveau service</a>
    </div>  
  </div>
{% endblock %}



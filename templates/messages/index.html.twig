{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container">
    <div class="contact row">
        <div class="col-md-5 cardInfo">
            <p>Vous pouvez nous contacter :<br>
            <span class="infoContact">par mail: garageparrot@gmail.com<br>
            Tel:  09.66.34.56.12</span><br>
            ou à l’aide du formulaire de contact.</p>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row formulaire">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'DOE'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'name@example.com'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
                {{ form_label(form.phone) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': '01.23.45.67.89'}}) }}
                {{ form_errors(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_label(form.subject) }}
                {{ form_widget(form.subject, {'attr': {'class': 'form-control', 'placeholder': 'Votre sujet'}}) }}
                {{ form_errors(form.subject) }}
            </div>
            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                {{ form_errors(form.message) }}
            </div>
            <div >
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}

